@model BookInformation

<form method="post" asp-action="Delete">
    <input asp-for="BookISBN" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="BookISBN"></label>
            <input asp-for="BookISBN" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="BookName"></label>
            <input asp-for="BookName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PublisherId"></label>
            <input asp-for="PublisherId" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Cover"></label>
            <input asp-for="Cover" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="BookInformation" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
	@{
    <partial name="_ValidationScriptsPartial" />
	}
}

@model XPTOlibrary.Models.ViewModels.BookwithCoresVM;
<form method="post" asp-action="Details">
    <input hidden asp-for="BookInformation.BookISBN" />
    <div class="card  container pt-4">
        <div class="card-header bg-primary text-light ml-0  row ">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.BookInformation.BookName</h1>
                <p class="text-warning">by @Model.BookInformation.Author</p>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">

                        <div class="row pl-2">
                            <h5 class="text-muted">Book ISBN : @Model.BookInformation.BookISBN</h5>
                            <h5 class="text-muted">Publisher : @Model.BookInformation.Publisher</h5>
                            <h5 class="text-muted">Topic: @Model.BookInformation.Topic</h5>
                            @foreach(var bookcore in Model.BookCores){
                            <h5 class="text-muted">Core : @bookcore.Cores.CoreName</h5>
                            <h5 class="text-muted">Available Copies : @bookcore.Copies</h5>
                            }
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.BookInformation.Cover" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control" style="height:50px;" asp-action="Index">Back to Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Borrow" class="btn btn-primary form-control" asp-route-id="@Model.BookCores">
							Borrow
						</a>
                </div>
            </div>
        </div>
    </div>
</form>